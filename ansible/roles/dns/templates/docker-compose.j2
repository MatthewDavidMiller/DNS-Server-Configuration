version: "3"

services:
  pihole:
    container_name: pihole
    image: pihole/pihole:latest
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "443:443/tcp"
      - "80:80/tcp"
    environment:
      TZ: 'America/Chicago'
      WEBPASSWORD: {{ web_password }}

    volumes:
      - './etc-pihole/:/etc/pihole/'
      - './etc-dnsmasq.d/:/etc/dnsmasq.d/'
      - './etc-lighttpd/external.conf:/etc/lighttpd/external.conf'
      - './etc-lighttpd/cert_privkey_combined.pem:/etc/lighttpd/cert_privkey_combined.pem'

    cap_add:
      - NET_ADMIN

    dns:
      - 8.8.8.8
      - 1.1.1.1

    restart: unless-stopped
